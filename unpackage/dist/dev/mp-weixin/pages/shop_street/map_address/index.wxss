.info-wrapper {
	background: #fff;
	height: 150rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.selectType {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.selectType view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
}
.type {
	border-bottom: 1px solid #ccc;
}
.type:last-child {
	border-right: none;
}
.type.active {
	color: #10D5AF;
	border-color: #10D5AF;
}
.navigatePic {
	position: absolute;
	right: 50rpx;
	background: #10D4AF;
	width: 120rpx;
	height: 120rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	bottom: 50rpx;
	text-align: center;
	line-height: 120rpx;
	color: #fff;
	font-weight: bold;
}
.info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	line-height: 80rpx;
	font-size: 32rpx;
	font-weight: bold;
	padding: 20rpx;
}
.info text {
	margin-right: 40rpx;
}

